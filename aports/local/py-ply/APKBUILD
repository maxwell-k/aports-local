# Contributor: Keith Maxwell <keith.maxwell@gmail.com>
# Maintainer: Keith Maxwell <keith.maxwell@gmail.com>
pkgname=py-ply
pkgver=3.11
pkgrel=1
pkgdesc="Python Lex & Yacc"
url="http://www.dabeaz.com/ply/"
arch="noarch"
license="BSD-3-Clause"
depends="py-six"
makedepends="python3-dev python2-dev"
source="$url/ply-$pkgver.tar.gz"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
builddir="$srcdir/ply-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py --quiet build
	python3 setup.py --quiet build
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

check() {
	cd "$builddir/test"
	for python in python2 python3 ; do
		$python testlex.py
		$python testyacc.py
		$python testcpp.py
	done
}

package() {
	mkdir -p "$pkgdir"
}

sha512sums="37e39a4f930874933223be58a3da7f259e155b75135f1edd47069b3b40e5e96af883ebf1c8a1bbd32f914a9e92cfc12e29fec05cf61b518f46c1d37421b20008  ply-3.11.tar.gz"
