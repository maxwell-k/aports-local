# Contributor: Keith Maxwell <keith.maxwell@gmail.com>
# Maintainer: Keith Maxwell <keith.maxwell@gmail.com>
pkgname=sasl2-oauth
pkgver=0.0.1_git20150523
pkgrel=0
pkgdesc="An OAuth plugin for libsasl2"
url="https://github.com/robn/sasl2-oauth"
arch="all"
license="mit"
depends=
makedepends="autoconf automake libtool cyrus-sasl-dev"
install=
_gitrev=c1d7cd0719c233c89307b7406f92a01602a85993
source="$pkgname-$pkgver.zip::$url/archive/$_gitrev.zip
	0001-SASL_OK.patch"

builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	mv "$srcdir/$pkgname-$_gitrev" "$builddir"
	default_prepare
}

build() {
	cd "$builddir"
	autoreconf -f -i
	./configure --prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

check() {
	# uncomment the 2 lines below if there is a testsuite.  we assume the testsuite
	# is run using "make check", which is the default for autotools-based build systems.
	cd "$builddir"
	# make check
}
