# Maintainer: Keith Maxwell <keith.maxwell@gmail.com>
pkgname=py3-pytest-localserver
_pyname=pytest-localserver
pkgver=0.5.0
pkgrel=0
pkgdesc="a pytest plugin to test server connections locally"
url="http://bitbucket.org/pytest-dev/pytest-localserver/"
arch="noarch"
license="MIT"
depends="python3"
checkdepends="py3-pytest py3-six py3-requests py3-werkzeug"
source="${pkgname}-${pkgver}.tar.gz::https://bitbucket.org/pytest-dev/pytest-localserver/get/${pkgver}.tar.gz"
# 78e960bc4a06d7ec8b95d4e726a70c0d5116b5ac 0.5.0
builddir="$srcdir/pytest-dev-$_pyname-78e960bc4a06"

build() {
	cd "$builddir"
	python3 setup.py build
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

check() {
	cd "$builddir"
	pytest-3
}

sha512sums="5ceb1e5ad72b63fa87a04118f63356a1df1e8890a31f8260fc1742c6dcae307df5a2eb53455c53eb86f2fb5e804ca608514afbb2b3d46ba9d0ec4f5900d77fdd  py3-pytest-localserver-0.5.0.tar.gz"
